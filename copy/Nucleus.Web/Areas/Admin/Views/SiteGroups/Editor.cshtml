@model Nucleus.Web.ViewModels.Admin.SiteGroupEditor
@addTagHelper "*, Nucleus.ViewFeatures"
@using Nucleus.ViewFeatures.HtmlHelpers
@using Nucleus.ViewFeatures
@using Nucleus.Abstractions.Models
@using (Html.BeginAreaForm("Save", "SiteGroups", "Admin", FormMethod.Post, new { @data_target = ".AdminPage", @autocomplete = "off" }))
{

	<div id="sitegroup-properties">
		<fieldset role="group" aria-labelledby="heading">
			<h2>Site Group</h2>
			@Html.HiddenFor(model => model.SiteGroup.Id)
			
			<SettingsControl caption="Name" helptext="Site Group name">
				@Html.TextBoxFor(model => model.SiteGroup.Name)
			</SettingsControl>

			<SettingsControl caption="Description" helptext="Description">
				@Html.TextAreaFor(model => model.SiteGroup.Description)
			</SettingsControl>

			<SettingsControl caption="Primary Site" helptext="The primary site contains the users, roles and other data that is shared by members of this site group.">
				@Html.DropDownListFor(model => model.SiteGroup.PrimarySite.Id, new SelectList(Model.Sites, "Id", "Name"))
			</SettingsControl>
		</fieldset>
	</div>


	<div class="ButtonPanel">
		<input type="submit" class="DefaultButton" value="Save Changes" />
		@if (Model.SiteGroup.Id != Guid.Empty)
		{
			<input type="submit" class="DeleteButton" value="Delete Site Group" formaction="@Url.AreaAction("DeleteSiteGroup", "SiteGroups", "Admin")" data-confirm="Delete this role group?" />
		}
		</div>
}
