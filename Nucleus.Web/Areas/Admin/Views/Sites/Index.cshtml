@model Nucleus.Web.ViewModels.Admin.SiteIndex
<h1 class="nucleus-control-panel-heading">Sites</h1>
<div class="nucleus-form-tools">
	<a href="@Url.Content("~/Admin/Sites/Editor")" class="btn btn-secondary" data-target=".SiteEditor">New Site</a>
</div>
<div class="nucleus-index-wrapper">
	<div class="nucleus-index-items">
		<ul>
			@foreach (var item in Model.Sites)
			{
				<li><a href="@Url.Content("~/Admin/Sites/Editor")?id=@item.Id" data-target=".SiteEditor">@item.Name</a></li>
			}
		</ul>
	</div>

	<div class="SiteEditor nucleus-editor-panel">

	</div>
</div>