@model Nucleus.Web.ViewModels.Admin.ListIndex
<h1 class="nucleus-control-panel-heading">Lists</h1>
<div class="nucleus-form-tools">
	<a href="@Url.Content("~/Admin/Lists/Editor")" class="btn btn-secondary" data-target=".ListEditor">New List</a>
</div>
<div class="nucleus-index-wrapper">
	<div class="nucleus-index-items">
		<ul>
			@foreach (var item in Model.Lists)
			{
				<li><a href="@Url.Content("~/Admin/Lists/Editor")?id=@item.Id" data-target=".ListEditor">@item.Name</a></li>
			}
		</ul>
	</div>

	<div class="ListEditor nucleus-editor-panel"></div>
</div>