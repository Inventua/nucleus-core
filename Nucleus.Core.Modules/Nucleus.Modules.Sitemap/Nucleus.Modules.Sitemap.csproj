<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Label="Globals">
    <SccProjectName></SccProjectName>
    <SccProvider></SccProvider>
    <SccAuxPath></SccAuxPath>
    <SccLocalPath></SccLocalPath>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
		<ProduceReferenceAssembly>false</ProduceReferenceAssembly>
		<DisableFastUpToDateCheck>True</DisableFastUpToDateCheck>
  </PropertyGroup>

	<ItemGroup>
		<None Remove="**\*.vspscc" />
		<None Remove="**\*.scc" />
		<None Remove="*.zip" />
	</ItemGroup>
	
  <ItemGroup>
    <None Remove="package.xml" />
    <None Remove="readme.txt" />
    <None Remove="sitemap.css" />
    <None Remove="Views\Settings.cshtml" />
    <None Remove="Views\Viewer.cshtml" />
    <None Remove="_ViewImports.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="sitemap.css" />
    <Content Include="package.xml" />
    <Content Include="readme.txt" />
    <Content Include="Views\Viewer.cshtml" />
    <Content Include="Views\Settings.cshtml" />
    <Content Include="_ViewImports.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Nucleus.Abstractions\Nucleus.Abstractions.csproj" />
    <ProjectReference Include="..\..\Nucleus.Core\Nucleus.Core.csproj" />
    <ProjectReference Include="..\..\Nucleus.ViewFeatures\Nucleus.ViewFeatures.csproj" />
  </ItemGroup>

	<PropertyGroup Label="Nucleus">
		<ExtensionFolder>Sitemap</ExtensionFolder>
		<Version>1.0.0</Version>
		<NUCLEUS_PATH>$([MSBuild]::EnsureTrailingSlash('$(NUCLEUS_PATH)'))</NUCLEUS_PATH>
	</PropertyGroup>

	<Import Label="ModulePostBuild" Project="$(NUCLEUS_PATH)module.build.targets" Condition="Exists('$(NUCLEUS_PATH)module.build.targets')" />

</Project>
