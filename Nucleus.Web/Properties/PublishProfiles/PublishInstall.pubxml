<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <DeleteExistingFiles>true</DeleteExistingFiles>
    <ExcludeApp_Data>false</ExcludeApp_Data>
    <LaunchSiteAfterPublish>true</LaunchSiteAfterPublish>
    <LastUsedBuildConfiguration>Release</LastUsedBuildConfiguration>
    <LastUsedPlatform>Any CPU</LastUsedPlatform>
    <PublishProvider>FileSystem</PublishProvider>
    <PublishUrl>Publish\</PublishUrl>
    <WebPublishMethod>FileSystem</WebPublishMethod>
    <SiteUrlToLaunchAfterPublish />
    <TargetFramework>net8.0</TargetFramework>
    <ProjectGuid>387821b9-3bd3-4d1f-ae73-b1595a80ad48</ProjectGuid>
    <SelfContained>false</SelfContained>
    <IsWebConfigTransformDisabled>true</IsWebConfigTransformDisabled>
    <DebugType>none</DebugType>
    <AllowedReferenceRelatedFileExtensions>*.pdb</AllowedReferenceRelatedFileExtensions>
  </PropertyGroup>
  <ItemGroup>
    <Content Remove="**\*.Development.json" />
    <Content Remove="**\*.pdb" />
    <Content Remove="**\bin\**\*.xml" />
    <Content Remove="Setup\install-log.config" />
  </ItemGroup>
  <Target Name="CompileExtensions" BeforeTargets="BeforePublish">
    <ItemGroup>
      <ExtensionProjects Include="..\Nucleus.Core.Modules\**\*.csproj" />
    </ItemGroup>
    <Message Importance="high" Text="Extension projects: @(ExtensionProjects)" />
    <MSBuild Projects="@(ExtensionProjects)" Properties="Configuration=Release" />
  </Target>
  <Target Name="RemoveUnwatedFiles" AfterTargets="AfterPublish">
    <ItemGroup>
      <UnwantedFiles Include="$(PublishUrl)Areas\Admin\**\*.*;" />
    </ItemGroup>
    <Delete Files="@(UnwantedFiles)" />
    <RemoveDir Directories="$(PublishUrl)Areas\" />
  </Target>
  <Target Name="PostBuild" AfterTargets="AfterPublish">
    <GetAssemblyIdentity AssemblyFiles="$(TargetPath)">
      <Output TaskParameter="Assemblies" ItemName="CurrentAssembly" />
    </GetAssemblyIdentity>
    <PropertyGroup>
      <VersionNumber>%(CurrentAssembly.Version)</VersionNumber>
    </PropertyGroup>
    <message Importance="High" text="Publishing zip: $(SolutionDir)Publish\Nucleus.$(VersionNumber).zip" />
    <MakeDir Directories="$(SolutionDir)..\Publish\Release" />
    <ZipDirectory SourceDirectory="$(PublishUrl)" DestinationFile="$(SolutionDir)..\Publish\Release\Nucleus.$(VersionNumber).Install.zip" Overwrite="true" />
  </Target>
</Project>