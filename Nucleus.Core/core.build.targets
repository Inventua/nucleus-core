<!--
	Shared Build actions for Nucleus core components.  
	
	To use this, add a line to the end of the .csproj file:
	
		<Import Project="..\Nucleus.Core\core.build.targets" />			
-->
<Project>
	<PropertyGroup>
    <VersionPrefix>2.1.0.0</VersionPrefix>
		<VersionSuffix>rc-2</VersionSuffix>
    <Authors>Inventua Pty Ltd</Authors>
		<Product>Nucleus</Product>
		<Copyright>(c) Inventua Pty Ptd</Copyright>
	</PropertyGroup>

  <ItemGroup Condition=" '$(Configuration)' == 'Release' ">
    <!-- Reference InheritDoc (https://github.com/saucecontrol/InheritDoc) for release builds -->
    <PackageReference Include="SauceControl.InheritDoc" Version="2.*" PrivateAssets="all" />
  </ItemGroup>
  
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <!-- 
    Release mode only:
    This prevents published (release) output from having the BlazorDebugProxy folder, which is only for debug use.  The folder output can be 
    generated by any project which references the Microsoft.AspNetCore.Components.WebAssembly.Server package, so we are setting it here to 
    ensure that it is in effect for all projects.
    
    Code reference: https://github.com/dotnet/aspnetcore/blob/main/src/Components/WebAssembly/Server/src/build/Microsoft.AspNetCore.Components.WebAssembly.Server.targets
    Source: https://stackoverflow.com/questions/63457026/any-way-to-exclude-blazordebugproxy-directory-from-release-blazor-wasm-apps/67289428#67289428
    --> 
    <BlazorWebAssemblyOmitDebugProxyOutput>true</BlazorWebAssemblyOmitDebugProxyOutput>
   
    <!-- 
    Enable InheritDoc (https://github.com/saucecontrol/InheritDoc) for release builds
    -->
    <InheritDocEnabled>true</InheritDocEnabled>
  </PropertyGroup>
</Project>