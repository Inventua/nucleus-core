@model Nucleus.DNN.Migration.ViewModels.User
@Html.AddStyle("~!/../index.css")
<h2 class="nucleus-control-panel-heading">Migrate DNN Users</h2>
<div class="dnn-migration">
  <div class="alert alert-primary">
    <ul>
      <li>Super users will not be migrated.</li>
      <li>Only Authorised Users will be migrated.</li>
      <li>User roles will only be migrated if a role with the same name already exists in Nucluus.</li>
      <li>There are @Model.Users.Count users to migrate.</li>
    </ul>
  </div>

  @using (Html.BeginNucleusForm("MigrateUsers", "DNNMigration", "DNNMigration", FormMethod.Post, new { }))
  {
    @Html.HiddenFor(model => model.PortalId)
    <div class="nucleus-button-panel">
      <button type="submit" class="btn btn-primary" data-confirm="Migrate selected Users from DotNetNuke now?  This action cannot be reversed.">Migrate Users</button>
    </div>

    <div class="my-2">
      <h2>Users</h2>
      <div class="overflow-auto">
        <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th />
            <th>Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
          </tr>
        </thead>

        @for (int index = 0; index < Model.Users.Count; index++)
        {
          <tr>
            <td>
              @Html.CheckBoxFor(model=> model.Users[index].IsSelected)
              @Html.HiddenFor(model=> model.Users[index].UserId)
            </td>
            <td>@Model.Users[index].UserId</td>
            <td>@Model.Users[index].UserName</td>
            <td>@Model.Users[index].Email</td>
            <td>@Model.Users[index].FirstName</td>
            <td>@Model.Users[index].LastName</td>
          </tr>
        }
      </table>
      </div>
    </div>

  }
</div>
