	<PropertyGroup Label="Nucleus">
		<ExtensionFolder>Publish</ExtensionFolder>
		<Version>1.3.0</Version>
		<NUCLEUS_PATH>$([MSBuild]::EnsureTrailingSlash('$(NUCLEUS_PATH)'))</NUCLEUS_PATH>
