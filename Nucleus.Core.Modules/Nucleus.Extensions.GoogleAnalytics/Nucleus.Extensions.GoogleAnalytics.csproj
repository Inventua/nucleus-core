<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
		<ProduceReferenceAssembly>false</ProduceReferenceAssembly>
		<DisableFastUpToDateCheck>True</DisableFastUpToDateCheck>
		<RootNamespace>Nucleus.Extensions.GoogleAnalytics</RootNamespace>
  </PropertyGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

<ItemGroup>
		<None Remove="**\*.vspscc" />
		<None Remove="**\*.scc" />
		<None Remove="*.zip" />
	</ItemGroup>

  <ItemGroup>
    <None Remove="viewer.css" />
    <None Remove="package.xml" />
    <None Remove="readme.txt" />
    <None Remove="settings.css" />
    <None Remove="Views\AnalyticsScript.cshtml" />
    <None Remove="Views\Settings.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="viewer.css" />
    <Content Include="package.xml" />
    <Content Include="readme.txt" />
    <Content Include="settings.css" />
    <Content Include="Views\AnalyticsScript.cshtml" />
    <Content Include="Views\Settings.cshtml" />
  </ItemGroup>

	<ItemGroup>
		<PackageReference Include="Nucleus.Abstractions" Version="1.0.0" />
		<PackageReference Include="Nucleus.ViewFeatures" Version="1.0.0.1" />
	</ItemGroup>

	<PropertyGroup Label="Nucleus">
		<ExtensionFolder>GoogleAnalytics</ExtensionFolder>
		<Version>1.0.0</Version>
		<NUCLEUS_PATH>$([MSBuild]::EnsureTrailingSlash('$(NUCLEUS_PATH)'))</NUCLEUS_PATH>
	</PropertyGroup>

	<Import Label="ModulePostBuild" Project="$(NUCLEUS_PATH)module.build.targets" Condition="Exists('$(NUCLEUS_PATH)module.build.targets')" />
</Project>
