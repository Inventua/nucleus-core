@model Nucleus.Web.ViewModels.Admin.MailTemplateIndex
<h1 class="nucleus-control-panel-heading">Mail Templates</h1>
<div class="nucleus-form-tools">
	<a href="@Url.Content("~/Admin/MailTemplates/Editor")" class="btn btn-secondary" data-target=".MailTemplateEditor">New Mail Template</a>
</div>
<div class="nucleus-index-wrapper">
	<div class="nucleus-index-items">

		<ul>
			@foreach (var item in Model.MailTemplates)
			{
				<li><a href="@Url.Content("~/Admin/MailTemplates/Editor")?id=@item.Id" data-target=".MailTemplateEditor">@item.Name</a></li>
			}
		</ul>
	</div>

	<div class="MailTemplateEditor nucleus-editor-panel">

	</div>
</div>