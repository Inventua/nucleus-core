@model Nucleus.Web.ViewModels.Admin.RoleGroupIndex
<h1 class="nucleus-control-panel-heading">Role Groups</h1>
<div class="nucleus-form-tools">
	<a href="@Url.Content("~/Admin/RoleGroups/Editor")" class="btn btn-secondary" data-target=".RoleGroupEditor">New Role Group</a>
</div>
<div class="nucleus-index-wrapper">
	<div class="nucleus-index-items">
		<ul>
			@foreach (var item in Model.RoleGroups)
			{
				<li><a href="@Url.Content("~/Admin/RoleGroups/Editor")?id=@item.Id" data-target=".RoleGroupEditor">@item.Name</a></li>
			}
		</ul>
	</div>

	<div class="RoleGroupEditor nucleus-editor-panel"></div>
</div>