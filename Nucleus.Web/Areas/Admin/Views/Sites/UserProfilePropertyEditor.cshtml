@model Nucleus.Web.ViewModels.Admin.SiteEditor
@addTagHelper "*, Nucleus.ViewFeatures"
@using Nucleus.ViewFeatures.HtmlHelpers
@using Nucleus.ViewFeatures
@using Nucleus.Abstractions.Models
@using (Html.BeginAreaForm("SaveUserProfileProperty", "Sites", "Admin", FormMethod.Post, new { @data_target = ".nucleus-adminpage", @autocomplete = "off" }))
{
<fieldset role="group" aria-labelledby="heading">
	<h2 class="nucleus-modal-caption">User Profile Property</h2>
	@Html.HiddenFor(model => model.Property.Id)
	@Html.HiddenFor(model => model.Property.SortOrder)
	@Html.HiddenFor(model => model.Site.Id)
	@Html.HiddenFor(model => model.IsCurrentSiteEditor)
	<SettingsControl caption="Name" helptext="Property name.  The properly name is used as the label text for the property in the user editor.">
		@Html.TextBoxFor(model => model.Property.Name)
	</SettingsControl>

	<SettingsControl caption="Type" helptext="Property type (uri).  A list of common types is at https://docs.microsoft.com/en-us/dotnet/api/system.security.claims.claimtypes.  You can also use a custom claim type.  When the user logs in, their profile properties are added to their 'identity' and can be accessed by extensions.">
		@Html.TextBoxFor(model => model.Property.TypeUri)
	</SettingsControl>

	<SettingsControl caption="Help Text" helptext="Property help text.  This is displayed on-screen when a user edits user properties.">
		@Html.TextBoxFor(model => model.Property.HelpText)
	</SettingsControl>
</fieldset>		

	<div class="nucleus-button-panel">
		<input type="submit" class="btn btn-primary" value="Save Changes" data-target="#UserProfilePropertiesList" />
	</div>
}

