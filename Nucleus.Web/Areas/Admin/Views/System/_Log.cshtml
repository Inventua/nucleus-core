@model Nucleus.Web.ViewModels.Admin.SystemIndex
@if (Model.LogContent != null)
{
	<table class="table font-monospace">
		<tr>
			<th>Date</th>
			<th>Level</th>
			<th>Category</th>
			<th>Message</th>
		</tr>
		@foreach (var entry in Model.LogContent.Where(log => log.IsValid))
		{
			<tr>
				<td>@entry.Date.FormatDate(this.Context.Request.GetUserTimeZone())</td>
				<td class="nucleus-log-@entry.Level.ToLower()">@entry.Level</td>
				<td>@entry.Category</td>
				<td>@entry.Message</td>
			</tr>
		}
	</table>					
}