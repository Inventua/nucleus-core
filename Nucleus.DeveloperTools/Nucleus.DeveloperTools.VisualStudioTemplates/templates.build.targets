<Project xmlns='http://schemas.microsoft.com/developer/msbuild/2003' ToolsVersion="15.0">
	<Target Name="ZipOutputPath" AfterTargets="Build">
		<ZipDirectory SourceDirectory="Template Source Code\Complex Extension Project Template" DestinationFile="Complex Extension.zip" Overwrite="true" />
		<ZipDirectory SourceDirectory="Template Source Code\Simple Extension Project Template" DestinationFile="Simple Extension.zip" Overwrite="true" />
		<ZipDirectory SourceDirectory="Template Source Code\Empty Extension Project Template" DestinationFile="Empty Extension.zip" Overwrite="true" />

		<Move SourceFiles="Complex Extension.zip" DestinationFiles="ProjectTemplates\Complex Extension.zip" OverwriteReadOnlyFiles="true" />
		<Move SourceFiles="Simple Extension.zip" DestinationFiles="ProjectTemplates\Simple Extension.zip" OverwriteReadOnlyFiles="true" />
		<Move SourceFiles="Empty Extension.zip" DestinationFiles="ProjectTemplates\Empty Extension.zip" OverwriteReadOnlyFiles="true" />
	</Target>
</Project>

