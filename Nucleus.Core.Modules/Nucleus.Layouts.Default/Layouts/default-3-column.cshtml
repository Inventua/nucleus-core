@Html.AddStyle("~!/default-3-column.css")

<div class="LayoutWrapper">
	<div class="BannerPane">
		@await Html.PartialAsync("_banner.cshtml")
		@await Html.RenderPaneAsync("BannerPane")
	</div>

	<div class="ContentWrapper" data-track-scroll="content-wrapper">
		<div class="LeftPane">
			@await Html.RenderPaneAsync("LeftPane")
		</div>

		<div class="ContentPane">
			@await Html.RenderPaneAsync("ContentPane")
		</div>

		<div class="RightPane">
			@await Html.RenderPaneAsync("RightPane")
		</div>
	</div>

	<div class="BottomPane">
		<terms caption="Terms" />
		<privacy caption="Privacy Policy" />
		@await Html.RenderPaneAsync("BottomPane")
	</div>
</div>