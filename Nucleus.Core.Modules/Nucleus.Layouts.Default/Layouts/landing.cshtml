@Html.AddStyle("~/Shared/Layouts/layout-styles.css")
@Html.AddStyle("~!/landing.css")
<div class="layout-landing layout-styles fill-height LayoutWrapper">
  <div class="BannerPane">
    @await Html.PartialAsync("_banner.cshtml")
    @await Html.RenderPaneAsync("BannerPane")
  </div>
  <div class="flex-column scrollable OuterWrapper" data-track-scroll="content-area">
    <div class="HeroPane" suppress-empty="true">
      @await Html.RenderPaneAsync("HeroPane")
    </div>
    <div class="flex-column ContentWrapper">
      <div class="two-column containers-fill-height Top2Column" suppress-empty="true">
        @await Html.RenderPaneAsync("Top2Column")
      </div>
      <div class="three-column containers-fill-height Top3Column" suppress-empty="true">
        @await Html.RenderPaneAsync("Top3Column")
      </div>

      <div class="flex-column ContentPane" suppress-empty="true">
        @await Html.RenderPaneAsync("ContentPane")
      </div>

      <div class="three-column containers-fill-height Bottom3Column" suppress-empty="true">
        @await Html.RenderPaneAsync("Bottom3Column")
      </div>
      <div class="two-column containers-fill-height Bottom2Column" suppress-empty="true">
        @await Html.RenderPaneAsync("Bottom2Column")
      </div>
    </div>
  </div>
  <div class="default-footer FooterPane" suppress-empty="true">
    <terms caption="Terms" />
    <privacy caption="Privacy Policy" />
    @await Html.RenderPaneAsync("FooterPane")
  </div>
</div>