@model Nucleus.Web.ViewModels.Admin.RoleIndex
<h1 class="nucleus-control-panel-heading">Roles</h1>
<div class="nucleus-form-tools">
	<a href="@Url.Content("~/Admin/Roles/Editor")" class="btn btn-secondary" data-target=".RoleEditor">New Role</a>
</div>
<div class="nucleus-index-wrapper">
	<div class="nucleus-index-items">
		<ul>
			@foreach (var item in Model.Roles)
			{
				<li><a href="@Url.Content("~/Admin/Roles/Editor")?id=@item.Id" data-target=".RoleEditor">@item.Name</a></li>
			}
		</ul>
	</div>

	<div class="RoleEditor nucleus-editor-panel"></div>
</div>