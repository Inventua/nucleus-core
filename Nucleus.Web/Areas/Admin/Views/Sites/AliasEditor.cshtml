@model Nucleus.Web.ViewModels.Admin.SiteEditor
@addTagHelper "*, Nucleus.ViewFeatures"
@using Nucleus.ViewFeatures.HtmlHelpers
@using Nucleus.ViewFeatures
@using Nucleus.Abstractions.Models
@using (Html.BeginAreaForm("SaveAlias", "Sites", "Admin", FormMethod.Post, new { @data_target = ".nucleus-adminpage", @autocomplete = "off" }))
{
<fieldset role="group" aria-labelledby="heading">
	<h2 class="nucleus-modal-caption">Site Alias</h2>

	@Html.HiddenFor(model => model.Alias.Id)
	@Html.HiddenFor(model => model.Site.Id)
	@Html.HiddenFor(model => model.IsCurrentSiteEditor)

	<SettingsControl caption="Alias" helptext="A site alias is the DNS domain for the site (not including the schema - http:// or https://), but including any non-default port and virtual directory path.  It is used to identify the site being accessed.">
		@Html.TextBoxFor(model => model.Alias.Alias, new { @maxlength = 256 })
	</SettingsControl>
</fieldset>		

	<div class="nucleus-button-panel">
		<input type="submit" class="btn btn-primary" value="Save Changes" data-target = "#AliasList" />
	</div>
}

