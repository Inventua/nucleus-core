@model Nucleus.Web.ViewModels.Admin.RoleGroupEditor
@addTagHelper "*, Nucleus.ViewFeatures"
@using Nucleus.ViewFeatures.HtmlHelpers
@using Nucleus.ViewFeatures
@using Nucleus.Abstractions.Models
@using (Html.BeginAreaForm("Save", "RoleGroups", "Admin", FormMethod.Post, new { @data_target = ".nucleus-adminpage", @autocomplete = "off" }))
{

	<div id="rolegroup-properties">
		<fieldset role="group" aria-labelledby="heading">
			<h2>Role Group</h2>
			@Html.HiddenFor(model => model.RoleGroup.Id)

			<SettingsControl caption="Name" helptext="Role Group name.  This value is displayed in on-screen controls which refer to role groups.">
				@Html.TextBoxFor(model => model.RoleGroup.Name, new { @maxlength = 256 })
			</SettingsControl>

			<SettingsControl caption="Description" helptext="The role group description is for your reference in the control panel pages.">
				@Html.TextAreaFor(model => model.RoleGroup.Description, new { @maxlength = 512 })
			</SettingsControl>

		</fieldset>
	</div>


	<div class="nucleus-button-panel">
		<input type="submit" class="btn btn-primary" value="Save Changes" />
		@if (Model.RoleGroup.Id != Guid.Empty)
		{
			<input type="submit" class="btn btn-danger" value="Delete Role Group" formaction="@Url.AreaAction("DeleteRoleGroup", "RoleGroups", "Admin")" data-confirm="Delete this role group?" />
		}
		</div>
}
