@model Nucleus.Web.ViewModels.Admin.UserIndex
@addTagHelper "*, Nucleus.ViewFeatures"
@using Nucleus.ViewFeatures.HtmlHelpers
@using Nucleus.ViewFeatures
<h1>Users</h1>
<div class="Tools">
	@using (Html.BeginAreaForm("Search", "Users", "Admin", FormMethod.Post, new { @data_target = ".SearchResults", @autocomplete = "off" }))
	{
		@Html.TextBoxFor(model => model.SearchTerm, new { @data_autopostbackevent = "keydown", @placeholder = "search", @type="search"  })
		<input type="submit" value="&#xe8b6;" class="MaterialIcon" />
	}
	<a href="@Url.Content("~/Admin/Users/Editor")" class="button" data-target=".UserEditor">New User</a>
</div>

<div class="SearchResults">

</div>
<div class="IndexWrapper">
	<div class="ItemsList">
		<ul>
			@foreach (var item in Model.Users)
			{
				<li><a href="@Url.Content("~/Admin/Users/Editor")?id=@item.Id" data-target=".UserEditor">@item.UserName</a></li>
			}
		</ul>
	</div>

	<div class="UserEditor EditorPanel"></div>
</div>