@model Nucleus.OAuth.ViewModels.Settings
@addTagHelper "*, Nucleus.ViewFeatures"
@using Nucleus.ViewFeatures.HtmlHelpers
@using Nucleus.ViewFeatures
@using Nucleus.Abstractions.Models
@Html.AddStyle("~!/../settings.css")

<h1 class="nucleus-modal-caption">Documents Settings</h1>

@using (Html.BeginNucleusForm("Settings", "OAuth", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
	<div id="SiteSettings" class="SiteSettings">
		<Tab>
			<TabItem target="#site-settings" caption="Settings"></TabItem>
		</Tab>

		<TabContent>

			<TabPanel id="site-settings">
				<fieldset role="group" aria-labelledby="heading">
					<h2>Settings</h2>
					<SettingsControl caption="Layout" helptext="Display layout.">
						@Html.DropDownListFor(model => model.Layout, new SelectList(Model.Layouts))
					</SettingsControl>
					
					<div class="nucleus-form-tools">
						@Html.SubmitButton("", "Save Settings", @Url.NucleusAction("SaveSettings", "OAuth", "OAuth"), new { })
					</div>
				</fieldset>
			</TabPanel>
		</TabContent>
	</div>
}