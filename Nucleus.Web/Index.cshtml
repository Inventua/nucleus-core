<p>New messages have been posted to a forum that you are tracking at @Model.Site.Name: </p>
<h2>Posts</h2>

<table>
<tr>
<th>Subject</th>
<th>Author</th>
<th>Date</th>
</tr>
@foreach (var forum in Model.Forums)
{
  <tr>
    <td colspan="3">@forum.Name</td>
  </tr>
  <tr>
    <td colspan="3"><h2>Posts</h2></td>
  </tr>
  @foreach (var post in forum.Posts)
  {
  <tr>
    <td><a href="/@Model.Forum.Name/zzz">@post.Subject</a></td>
    <td>@post.PostedBy.UserName</td>
    <td>@post.DateAdded</td>
  </tr>
  }
  <tr>
    <td colspan="3"><h2>Replies</h2></td>
  </tr>
  @foreach (var reply in forum.Replies)
  {
  <tr>
    <td><a href="/@Model.Forum.Name/zzz">@reply.Subject</a></td>
    <td>@reply.PostedBy.UserName</td>
    <td>@reply.DateAdded</td>
  </tr>
  }
}
</table>