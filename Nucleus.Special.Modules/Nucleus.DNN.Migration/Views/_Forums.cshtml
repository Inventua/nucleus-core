@model Nucleus.DNN.Migration.ViewModels.Forum
@Html.AddStyle("~!/../index.css")
<h2 class="nucleus-control-panel-heading">Migrate DNN Forums</h2>
<div>
  <div class="alert alert-primary">
    <ul>
      <li>There are @Model.ForumGroups.SelectMany(group => group.Forums).Where(forum => forum.IsSelected).Count() forums, containing @Model.TotalPosts posts to migrate.</li>
    </ul>
  </div>

  @using (Html.BeginNucleusForm("MigrateForums", "DNNMigration", "DNNMigration", FormMethod.Post, new { }))
  {
    @Html.HiddenFor(model => model.PortalId)
    <div class="nucleus-flex-fields">
      <SettingsControl caption="Update Existing?" rendermode="LabelLast" class="inner-inline" helptext="Specifies whether to update forum posts when a matching post is found.  If this is not set, existing posts will generate an error.">
        @Html.CheckBoxFor(model => model.UpdateExisting, new { @class = "ToggleSwitch" })
      </SettingsControl>

      <button type="submit" class="btn btn-primary nucleus-show-progress nucleus-show-progress-before" data-target="#MigrateForums" data-confirm="Migrate forum posts for selected forums from DotNetNuke now?  This action cannot be reversed.">Migrate Forum Posts</button>
    </div>

    <div class="my-2">
      <div class="overflow-auto">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>@Html.CheckBox("toggle-all", true, new { @class = "toggle-all", @id = "" } )</th>
              <th>Name</th>
              <th>Messages</th>
            </tr>
          </thead>
          <tbody>
            @{
              var index = 0;
            }
            @foreach (var group in Model.ForumGroups)
            {
              <tr>
                <th colspan="3"><h2 class="mt-3">@group.Name</h2></th>
              </tr>
              @foreach (var forum in group.Forums)
              {
                <tr>
                  <td>
                    @if (forum.CanSelect)
                    {
                      @Html.CheckBox($"Forums[{index}].IsSelected", forum.IsSelected, new { id = $"Forums_{index}__IsSelected" })                      
                    }
                    @Html.Hidden($"Forums[{index}].CanSelect", forum.CanSelect, new { id = $"Forums_{index}__CanSelect" })
                    @Html.Hidden($"Forums[{index}].ForumId", forum.ForumId, new { id = $"Forums_{index}__ForumId" })
                  </td>
                  <td>@forum.Name</td>
                  <td>
                    <table class="table table-sm table-borderless validation-results">
                      @foreach (var result in forum.Results)
                      {
                        <tr>
                          <td class="glyph-@result.Type">@result.Message</td>
                        </tr>
                      }
                      <tr>
                        <td class="glyph-Information">There are @forum.PostCount posts to migrate.</td>
                      </tr>
                    </table>
                  </td>
                </tr>
                
                index++;
                
              }
            }
          </tbody>
        </table>
      </div>
    </div>

  }
</div>
